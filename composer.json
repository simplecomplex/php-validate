{
    "name": "simplecomplex/validate",
    "type": "library",
    "description": "Validate shallowly and recursively (elements of object/array).",
    "keywords": ["validate", "PHP"],
    "homepage": "https://github.com/simplecomplex/php-validate",
    "license": "MIT",
    "authors": [
        {
            "name": "Jacob Friis Mathiasen",
            "email": "jacob.friis@simplecomplex.net"
        }
    ],
    "require": {
        "php": ">=7.2",
        "ext-ctype": "*",
        "simplecomplex/utils": "^1.11 || ^2.0 || dev-develop"
    },
    "require-dev": {
        "phpunit/phpunit": "^8"
    },
    "suggest": {
        "simplecomplex/inspect": "Great for logging; better variable dumps and traces."
    },
    "autoload": {
        "psr-4": {
            "SimpleComplex\\Validate\\": "src/",
            "SimpleComplex\\Tests\\Validate\\": "tests/src/"
        }
    }
}
